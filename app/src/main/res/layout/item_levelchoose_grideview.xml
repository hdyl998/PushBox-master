<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <com.hdyl.pushbox.soko.SokoView
        android:id="@+id/sokoView1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp" />

    <ImageView
        android:id="@+id/ivCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bye_shape_corner_bg_fill_bg_red"
        android:padding="5dp"
        android:src="@drawable/ic_completed" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sokoView1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bye_shape_corner_bg_fill_bg"
        android:gravity="center_horizontal"
        android:minWidth="40dp"
        android:text="Large Text"
        android:textColor="@color/white"
        android:textSize="12sp" />

</RelativeLayout>